        <button id="login">登录</button>
        <div style="margin-top: 28px;border-radius: 6px;">
            <a href="{{href}}">
                <img src="http://njwxe.o3onet.com/user/public/assets/img/icon_button3_1.png"
                     style="width: 303px;height:42px;border-radius: 8px;"/>
            </a>
        </div>


        <div id="error" class="error"><span>+</span></div>
    </form>
    <div id="errorMsg" style="font-weight: 900;;margin-top: 8px;margin-bottom:-22px;color:#ff148c;display: none">
        用户名或密码错误
    </div>
    <div style="text-align: center;font-size: 20px;margin-top: 30px;">
        <a style="cursor: pointer;text-decoration: none;color: #fdfdff" href="http://www.o3oNet.com">o3oNet</a>
